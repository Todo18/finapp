input
textarea
  font-primary()
  font-size 16px

.inputText
  margin-bottom $m9

  &:last-child
    margin-bottom 0

  &__value
    width 100% !important
    padding $m7
    color var(--c-font-1)
    font-size 18px
    background transparent
    border 1px solid var(--c-bg-8)
    border-radius $m5
    anim()
    &:hover
      border 1px solid var(--c-bg-9)
    &:focus
      border-color var(--c-blue-1)

    +media-laptop()
      font-size 14px

    &._color
      width 100px
      min-height 60px

  &__label
    opacity .6
    padding-bottom $m5
    color var(--c-font-3)
    font-size 10px
    font-weight 500
    text-align left
    text-transform uppercase

.colors
  display grid
  grid-template-columns repeat(10, 1fr)

.colorItem
  height 45px
  border 2px solid transparent

  &._active
    border 3px solid var(--c-bg-1)
