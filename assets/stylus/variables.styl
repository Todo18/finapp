@import 'variables/*'

button-base-1()
  cursor pointer
  display flex
  flex 1 1 50%
  align-items center
  justify-content center
  height 44px
  max-width 280px
  margin 0 auto
  padding 0 $m9
  font-size 12px
  text-decoration none
  background var(--c-item-bg-main)
  border 1px solid var(--c-bg-4)
  border-radius $m9
  anim()

  +media-hover()
    background var(--c-item-bg-hover)
    border 1px solid var(--c-item-bd-hover)

  +media(700px)
    height 48px
    max-width 280px
